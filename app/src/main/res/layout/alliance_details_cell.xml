<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playoff_alliances">

    <CheckBox
        android:id="@+id/checkbox_strike"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/very_small" />

    <TextView
        android:id="@+id/alliance_details_alliance_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/very_small"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/very_small">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/alliance_details_team1"
            tools:ignore="NestedWeights"
            android:text="1678"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/Black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/alliance_details_team2"
            android:text="1678"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/Black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/alliance_details_team3"
            android:text="1678"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/Black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_marginVertical="@dimen/very_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Auto"
            android:labelFor="@id/alliance_details_auto_score" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/alliance_details_auto_score"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/Black"
            tools:ignore="NestedWeights" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Teleop"
            android:labelFor="@id/alliance_details_tele_score" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/alliance_details_tele_score"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/Black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_marginVertical="@dimen/very_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Stage"
            android:labelFor="@id/alliance_details_endgame_score" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/alliance_details_endgame_score"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/Black"
            tools:ignore="NestedWeights" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Total"
            android:labelFor="@id/alliance_details_total_score" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/alliance_details_total_score"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/Black" />

    </LinearLayout>

</LinearLayout>
