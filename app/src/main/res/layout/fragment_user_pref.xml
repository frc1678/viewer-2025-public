<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_datapoints_header"
        style="@style/tv_header"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/very_small"
        android:text="@string/reset_button" />

    <Button
        android:id="@+id/select_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/very_small"
        android:layout_marginRight="@dimen/very_small"
        android:layout_marginBottom="@dimen/very_small"
        android:layout_marginTop="0dp"
        android:text="@string/select_all_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_user_datapoints"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2" />

    </LinearLayout>

</LinearLayout>
